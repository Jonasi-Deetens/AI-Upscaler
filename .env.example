# Database
DATABASE_URL=postgresql://upscaler:upscaler_secret@postgres:5432/upscaler

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0

# API URL (for frontend; use http://localhost:8000 when running from host)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Storage (use local for dev; set USE_LOCAL_STORAGE=false for S3/MinIO)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./storage
S3_BUCKET=upscaler
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1

# Job expiry (minutes)
JOB_EXPIRY_MINUTES=60

# Worker: GPU (set to 0 to use first NVIDIA GPU; leave unset for CPU)
# REAL_ESRGAN_GPU_ID=0

# Worker: SwinIR subprocess timeout in seconds (default 1800 = 30 min; large images on CPU may need more)
# SWINIR_TIMEOUT_SECONDS=1800

# Limits (optional)
MAX_FILES_PER_BATCH=10
MAX_MB_PER_FILE=50
MAX_MEGAPIXELS=16
